extends layout

append head
      script(src='./socket.io/socket.io.js')
      script(src='/js/join.js')


block content
      #content

      p Type in a name and join a game!
      form#login-form(action='/login', method='post')
            input(type='text'
                  id='username'
                  name='username'
                  value=""
                  placeholder='Username')
            input(type='password'
                  id='password'
                  name='password'
                  placeholder='Password')
            input(type="button"
                  id="login-button"
                  value="Go")


      append footer